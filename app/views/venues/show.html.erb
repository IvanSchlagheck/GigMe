<%= render "shared/venue-show-banner", venue: @venue %>
<div class="container">

  <%= render "events/calendar", locals: {venue: @venue, events: @events} %>

</div>

<div class="tabs">
  <div class="images-tab">
    <div class="d-flex flex-column" style="width: 100%;">
      <div class="d-flex align-items-center justify-content-end" style="margin-bottom: -26px;">
        <div class="arrow-down-pink"></div>
        <h4>
          <a class="link-collapse" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="#multiCollapseExample1">
              Images
          </a>
        </h4>
      </div>

      <div class="tab-green-line"></div>

      <div class="collapse multi-collapse" id="multiCollapseExample1">
        <div class="card-collapse-left">
          images
        </div>
      </div>
    </div>
  </div>

  <div class="tabs-right">
    <div class="about-tab">
      <div class="text-arrow d-flex justify-content">
        <h4>
          <a class="link-collapse" data-toggle="collapse" href="#multiCollapseExample2" role="button" aria-expanded="false" aria-controls="#multiCollapseExample2">
            About
          </a>
        </h4>
        <div class="arrow-down-pink"></div>
      </div>
      <div class="tab-green-line"></div>
        <div class="collapse multi-collapse" id="multiCollapseExample2">
          <div class="card-collapse">
            <%= @venue.about %>
          </div>
        </div>
    </div>

    <div class="reviews-tab">
      <div class="text-arrow d-flex justify-content">
        <h4>
          <a class="link-collapse" data-toggle="collapse" href="#multiCollapseExample3" role="button" aria-expanded="false" aria-controls="#multiCollapseExample3">
            Reviews
          </a>
        </h4>
        <div class="arrow-down-green"></div>
      </div>
        <div class="tab-pink-line"></div>
            <div class="collapse multi-collapse" id="multiCollapseExample3">
              <div class="card-collapse">
                <%= @venue.about %>
              </div>
            </div>
    </div>

    <div class="requirements-tab">
      <div class="text-arrow d-flex justify-content">
        <h4>
        <a class="link-collapse" data-toggle="collapse" href="#multiCollapseExample4" role="button" aria-expanded="false" aria-controls="#multiCollapseExample4">
            Requirements
          </a>
         </h4>
        <div class="arrow-down-pink"></div>
      </div>
      <div class="tab-green-line"></div>
        <div class="collapse multi-collapse" id="multiCollapseExample4">
              <div class="card-collapse">
                <%= @venue.requirements %>
              </div>
            </div>
    </div>
  </div>
</div>
