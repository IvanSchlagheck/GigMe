<div class="container">
  <%= render "shared/searchbar" %>
  <div class="index-text my-5">
    <h3>There are <%= @venues.count %> available venues for you to Gig!</h3>
  </div>
  <div class="d-flex">
    <div class="container d-flex flex-wrap cards">
      <% @venues.each do |venue| %>
        <%= link_to venue_path(venue) do %>
          <%= render "shared/card", venue: venue %>
        <% end %>
      <% end %>
    </div>
    <div id="map-venue-index"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

</div>
