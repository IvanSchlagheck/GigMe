
<div class="card-pink-line-home1" style="color:white; top:20%; margin-left:50px;">
<h1>Your Booking</h1>
<%= @booking.event.starts_at %>
<%= @booking.event.ends_at %>
</div>
<div class="messages card" style="margin:50px; margin-top: 175px">
  <div style="background-color:grey;" class="scroller"
  data-controller="booking-subscription"
  data-booking-subscription-booking-id-value="<%= @booking.id %>">
    <% @booking.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
    
  </div>
    <%= simple_form_for [@booking, @message], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "#Your Message#" %>
      <%= f.submit "send" %>
    <% end %>
</div>
