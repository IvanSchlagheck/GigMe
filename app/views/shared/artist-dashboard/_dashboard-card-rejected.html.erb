<div class="card-dashboard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path booking.event.venue.photo.key unless booking.event.venue.photo.nil?  %>)">
  <div class="card-text">
    <p><%= link_to "#{booking.event.venue.name}", venue_path(booking.event.venue) %></p>
    <p><%= booking.event.start_time.strftime('%d %b %H:%M') %></p>
    <p><%= link_to "Booking Details", booking_path(booking) %></p>
  </div>
  <div class="card-status">
    <p><%= booking.status.capitalize %></p>
  </div>
  <div class="card-green-line-rejected"></div>
  <div class="card-pink-line-rejected"></div>
</div>
