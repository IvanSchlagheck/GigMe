<div class="banner-show" style= "background-image: url('https://images.unsplash.com/photo-1552900213-6c202f667e32?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1686&q=80')">
  <div class="container banner-text my-5">
    <h1><%= @user.first_name.capitalize %></h1>
    <div class="banner-green-line" data-aos="fade-right" data-aos-duration="1750"></div>
    <h2><%= @user.last_name %></h2>
      <div class="container">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill, id: "artist-image" %>
        <% else %>
          <%= image_tag "https://images.squarespace-cdn.com/content/v1/5c660a39840b16cf85809e3c/1550477236066-402F5IENAONEA2DJIVWM/Fossicks2.jpg", height: 300, width: 400, id: "artist-image" %>
        <% end %>
      </div>
  </div>
</div>
