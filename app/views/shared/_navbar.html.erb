<div class="navbar">
  <div>
  <% unless current_page?(root_path) %>
        <div>
          <%= link_to "GigMe", root_path, class: "gigmelogo" %>
        </div>
      <% end %>
    </div>
  <div class="d-flex justify-content-between">
      <div class="navbar-items">
        <% unless current_user %>
            <%= link_to "Login", new_user_session_path, class: "signuplogin" %>
            <%= link_to "Sign up", new_user_registration_path, class: "signuplogin" %>
          <% end %>
          <% if current_user %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "signuplogin" %>
            <%= link_to "My dashboard", dashboard_path, class: "signuplogin" %>
                <% if current_user.photo.attached?%>
                   <%= image_tag current_user.photo.key %>
              <% else %>
                  <%= image_tag "https://image.gala.de/22313448/t/EN/v3/w1440/r1/-/rihanna.jpg", class: "avatar"%>
              <% end %>
          <% end %>
        <div class="card-pink-line-navbar"></div>
        <div class="card-green-line-navbar"></div>
    </div>
  </div>
</div>
